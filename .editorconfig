root = true

[*]
# 默认使用空白
indent_style = space
indent_size = 4

# 通用配置
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.java]
indent_style = space
indent_size = 2

# Markdown 保留行尾空白
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4

[{package,bower}.json]
indent_style = space
indent_size = 2

# Yaml 使用 2 的缩进
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Makefile 必须使用 tab
[Makefile]
indent_style = tab
